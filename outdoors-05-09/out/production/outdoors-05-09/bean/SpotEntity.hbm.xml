<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bean.SpotEntity" table="spot" schema="outdoors">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="countryName" column="countryName"/>
        <property name="shortIntro" column="shortIntro"/>
        <property name="introduction" column="introduction"/>
        <property name="photoPath" column="photoPath"/>
    </class>
</hibernate-mapping>